<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>with-dependencies</id>

    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>jar</format>
    </formats>

    <containerDescriptorHandlers>
        <containerDescriptorHandler>
            <handlerName>metaInf-services</handlerName>
        </containerDescriptorHandler>
    </containerDescriptorHandlers>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.thaiopensource:util</include>
                <include>com.thaiopensource:resolver</include>
                <include>com.thaiopensource:catalog</include>
                <include>com.thaiopensource:regex</include>
                <include>com.thaiopensource:datatype</include>
                <include>com.thaiopensource:xsd-datatype</include>
                <include>com.thaiopensource:rng-parse</include>
                <include>com.thaiopensource:pattern</include>
                <include>com.thaiopensource:jaxp</include>
                <include>com.thaiopensource:rng-jaxp</include>
                <include>com.thaiopensource:rng-validate</include>
                <include>com.thaiopensource:nvdl</include>
                <include>com.thaiopensource:schematron</include>
                <include>com.thaiopensource:xerces</include>
                <include>com.thaiopensource:picl</include>
                <include>com.thaiopensource:rng-jarv</include>
                <include>com.thaiopensource:validate</include>
            </includes>
            <outputDirectory/>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory/>
        </fileSet>
    </fileSets>

</assembly>
