<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>with-dependencies</id>

	<includeBaseDirectory>false</includeBaseDirectory>

	<formats>
		<format>jar</format>
	</formats>

	<containerDescriptorHandlers>
		<containerDescriptorHandler>
			<handlerName>metaInf-services</handlerName>
		</containerDescriptorHandler>
	</containerDescriptorHandlers>

	<dependencySets>
		<dependencySet>
			<includes>
				<include>com.thaiopensource:util</include>
				<include>com.thaiopensource:resolver</include>
				<include>com.thaiopensource:catalog</include>
				<include>com.thaiopensource:regex</include>
				<include>com.thaiopensource:datatype</include>
				<include>com.thaiopensource:xsd-datatype</include>
				<include>com.thaiopensource:rng-parse</include>
				<include>com.thaiopensource:dtd-parse</include>
				<include>com.thaiopensource:infer</include>
				<include>com.thaiopensource:rng-schema</include>
				<include>com.thaiopensource:convert-from-xml</include>
				<include>com.thaiopensource:convert-to-xsd</include>
				<include>com.thaiopensource:convert-from-dtd</include>
				<include>com.thaiopensource:convert-to-dtd</include>
			</includes>
			<outputDirectory/>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory/>
		</fileSet>
	</fileSets>

</assembly>
